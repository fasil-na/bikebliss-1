    <div class="container-fluid">
        <div class="row">

            <div class="col-sm-12 right">
                <br>
                <div class=" d-flex justify-content-end">
                    <input class="col-6 form-control me-2  w-25" id="search" type="search" placeholder="Search Users"
                        aria-label="Search">
                </div>
                <br>

                <table id='myTable'>
                    <thead>
                        <tr>
                            <th>SL.NO</th>
                            <th>ID</th>
                            <th>NAME</th>
                            <th>EMAIL ID</th>
                            <th>MOBILE NUMBER</th>
                            <th>ORDERS</th>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(function(x,i) { %>
                            <tr>
                                <td style="width: 10px;">
                                    <%= i+1 %>
                                </td>
                                <td>
                                    <%= x._id %>
                                </td>
                                <td>
                                    <%= x.name %>
                                </td>
                                <td>
                                    <%= x.email %>
                                </td>
                                <td>
                                    <%= x.number %>
                                </td>
                                <td>
                                    <button onclick="orderList('<%=x._id%>')"
                                        class="btn btn-primary userListButton">Orders</button>
                                </td>
                                <td>
                                    <%if(x.blockStatus){ %>
                                        <button onclick="BlockUnblock('<%=x._id%>', 'unBlock')"
                                            class="btn btn-success userListButton">Unblock</button>
                                        <% }else{%>
                                            <button onclick="BlockUnblock('<%=x._id%>', 'block')"
                                                class="btn btn-danger userListButton">Block</button>
                                            <%}%>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>


            </div>
        </div>

    </div>
    <script>
        function BlockUnblock(id, type) {
            fetch("/admin/blockUnblockUser", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    type,
                    id
                })
            })
                .then(response => {
                })
                .then(data => {
                    location.reload()
                })
                .catch(error => {
                    console.log(error);
                });
        }
    </script>
    <script>
        function orderList(userId) {
            fetch("/admin/orderList", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ userId })
            })
                .then(response => {
                    if (response.ok) {
                        return response.text();
                    } else {
                        throw new Error("Request failed.");
                    }
                })
                .then(html => {
                    document.open();
                    document.write(html);
                    document.close();
                })
                .catch(error => {
                    console.log(error);
                });
        }
    </script>


    <script>
        //searching the users

        // Get the search input and table rows
        const searchInput = document.querySelector('input[type="search"]');
        const tableRows = document.querySelectorAll('tbody tr');

        // Add an event listener to the search input
        searchInput.addEventListener('input', function () {
            const searchValue = this.value.toLowerCase();

            // Loop through the table rows and hide/show them based on the search input
            tableRows.forEach(function (row) {
                const name = row.querySelector('td:nth-of-type(3)').textContent.toLowerCase();
                const email = row.querySelector('td:nth-of-type(4)').textContent.toLowerCase();
                const number = row.querySelector('td:nth-of-type(5)').textContent.toLowerCase();

                if (name.includes(searchValue) || email.includes(searchValue) || number.includes(searchValue)) {
                    row.style.display = 'table-row';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
