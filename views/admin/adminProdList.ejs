                            <th>BRAND</th>
                            <th>STOCK</th>
                            <th>ACTION</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(function(x,i) { %>
                            <tr>
                                <td style="width: 10px;">
                                    <%= i+1 %>
                                </td>
                                <td>
                                    <%= x._id %>
                                </td>
                                <td id="name<%= i %>"  >
                                    <%= x.productName %>
                                </td>
                                
                                <td>
                                    <img src="/images/uploads/<%= x.imageUrl[0] %>" class="card-img-top w-100"
                                        id="card_image<%= i %>" alt="Product Image">
                                </td>
                                <td id="description<%= i %>">
                                    <%= x.description %>
                                </td>
                                <td id="price<%= i %>">
                                     <%= x.price %>â‚¹
                                </td>

                                <td id="color<%= i %>">
                                    <%= x.color %>
                                </td>
                                <td id="size<%= i %>">
                                    <%= x.size %>
                                </td>
                                <td id="category<%= i %>">
                                    <%= x.category.category %>
                                </td>
                                <td id="brand<%= i %>">
                                    <%= x.brand %>
                                </td>
                                <td id="stock<%= i %>">
                                    <%= x.stock %>
                                </td>
                                <td style="width: 10px;">
                                    <input type="hidden" name="id" value="<%= x._id %> " id="cat_id<%= i %>">
                                    <button class="buttons my-2" id="editButton"
                                        onclick="editProduct('<%= i %>')">EDIT</button>

                                    <button class="buttons my-2"><a
                                            href="/admin/productDelete/<%= x._id %>">DELETE</a></button>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
