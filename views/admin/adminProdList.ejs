    <div class="container-fluid">
        <div class="row">

            <div class="col-sm-12 right">
                <br>
                <div class="d-flex justify-content-between align-items-center">
                    <button class="createButton"><a href="/admin/prodCreate">Create Product</a></button>
                    <input class="col-6 form-control me-2 w-25" id="search" type="search" placeholder="Search Products"
                        aria-label="Search">
                </div>

                <br>

                <h2 class="text-danger text-center">
                    <%= text %>
                </h2>
                <table id='myTable'>
                    <thead>
                        <tr>
                           
                            <th>ID</th>
                            <th>NAME</th>
                            <th>IMAGE</th>
                            <th>DESCRIPTION</th>
                            <th>PRICE</th>
                            <th>COLOR</th>
                            <th>SIZE</th>
                            <th>CATEGORY</th>
                            <th>BRAND</th>
                            <th>STOCK</th>
                            <th>ACTION</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(function(x,i) { %>
                            <tr>
                              
                                <td>
                                    <%= x._id %>
                                </td>
                                <td id="name<%= i %>">
                                    <%= x.productName %>
                                </td>

                                <td>
                                    <img src="/images/uploads/<%= x.imageUrl[0] %>" class="card-img-top w-50"
                                        id="card_image<%= i %>" alt="Product Image">
                                </td>
                                <td id="description<%= i %>">
                                    <%= x.description %>
                                </td>
                                <td id="price<%= i %>">
                                    <%= x.price %>â‚¹
                                </td>

                                <td id="color<%= i %>">
                                    <%= x.color %>
                                </td>
                                <td id="size<%= i %>">
                                    <%= x.size %>
                                </td>
                                <td id="category<%= i %>">
                                    <%= x.category.category %>
                                </td>
                                <td id="brand<%= i %>">
                                    <%= x.brand %>
                                </td>
                                <td id="stock<%= i %>">
                                    <%= x.stock %>
                                </td>
                                <td style="width: 10px;">
                                    <button class="buttons my-2"><a
                                            href="/admin/productEdit/<%= x._id %>">EDIT</a></button>

                                    <%if(x.isDeleted===true){ %>
                                        <button class="buttons my-2"><a
                                                href="/admin/productList/<%= x._id %>">LIST</a></button>
                                        <% }else{%>
                                            <button class="buttons my-2"><a
                                                    href="/admin/productUnlist/<%= x._id %>">UNLIST</a></button>
                                            <%}%>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
                <style>
                    .pagination-container {
                        display: flex;
                        justify-content: center;
                        margin-top: 20px;
                    }

                    .pagination-link {
                        margin: 0 5px;
                        padding: 5px 10px;
                        border: 1px solid #ccc;
                        text-decoration: none;
                        color: #333;
                        background-color: #f7f7f7;
                        cursor: pointer;
                    }

                    .pagination-link.active {
                        background-color: #555;
                        color: #fff;
                    }
                </style>

                <div class="pagination-container">
                    <% for (let i=1; i <=totalPages; i++) { %>
                        <a href="/admin/productlist?page=<%= i %>"
                            class="pagination-link<%= i === currentPage ? ' active' : '' %>">
                            <%= i %>
                        </a>
                        <% } %>
                </div>

            </div>
        </div>
    </div>
    </div>


    <script>
        //searching the users

        // Get the search input and table rows
        const searchInput = document.querySelector('input[type="search"]');
        const tableRows = document.querySelectorAll('tbody tr');

        // Add an event listener to the search input
        searchInput.addEventListener('input', function () {
            const searchValue = this.value.toLowerCase();

            // Loop through the table rows and hide/show them based on the search input
            tableRows.forEach(function (row) {
                const productName = row.querySelector('td:nth-of-type(3)').textContent.toLowerCase();

                if (productName.includes(searchValue)) {
                    row.style.display = 'table-row';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>


