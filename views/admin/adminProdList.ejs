                </div>
                <br>

                <!-- popup element -->

                <div id="editPopupLarge" style="display:none;">
                    <form action="/admin/updateProduct" method="post" enctype="multipart/form-data">
                        <label for="name">Product Name:</label>
                        <input class="w-75 mx-auto my-2 form-control" type="text" id="card_title" name="card_title"><br>
                        <label for="name">Product Image:</label>
                        <input class="w-50 mx-auto my-3 form-control" type="file" id="card_image" name="image"><br>
                        <label for="name">Product Description:</label>
                        <input class="w-75 mx-auto my-2 form-control" type="text" id="card_Description"
                            name="card_Description"><br>
                        <label for="name">Product Price:</label>
                        <input class="w-75 mx-auto my-2 form-control" type="text" id="card_Price" name="card_Price"><br>
                        <label for="name">Product Color:</label>
                        <input class="w-75 mx-auto my-2 form-control" type="text" id="card_Color" name="card_Color"><br>
                        <!-- <label for="name">Product Size:</label>
                            <input class="w-75 mx-auto my-2 form-control" type="text" id="card_Size" name="card_Size"><br>
                            <label for="name">Product category:</label>
                            <input class="w-75 mx-auto my-2 form-control" type="text" id="card_Category" name="card_Category"><br>
                            <label for="name">Product Brand:</label>
                            <input class="w-75 mx-auto my-2 form-control" type="text" id="card_Brand" name="card_Brand"><br>
                           -->


                        <input type="hidden" name="id" id="cat_id">
