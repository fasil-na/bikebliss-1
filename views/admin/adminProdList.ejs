                <!---->

                <h2 class="text-danger text-center">
                    <%= text %>
                </h2>
                <table id='myTable'>
                    <thead>
                        <tr>
                            <th>SL.NO</th>
                            <th>ID</th>
                            <th>NAME</th>
                            <th>IMAGE</th>
                            <th>DESCRIPTION</th>
                            <th>PRICE</th>
                            <th>COLOR</th>
                            <th>SIZE</th>
