                </div>
                <!---->
                <table id='myTable'>
                    <thead>
                        <tr>
                            <th>SL.NO</th>
                            <th>ID</th>
                            <th>NAME</th>
                            <th>IMAGE</th>
                            <th>DESCRIPTION</th>
                            <th>PRICE</th>
                            <th>COLOR</th>
                            <th>SIZE</th>
                            <th>CATEGORY</th>
                            <th>BRAND</th>
                            <th>ACTION</th>
            
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(function(x,i) { %>
                            <tr>
                                <td style="width: 10px;">
                                    <%= i+1 %>
                                </td>
                                <td>
                                    <%= x._id %>
                                </td>
                                <td id="name<%= i %>">
                                    <%= x.productName %>     
                                </td>
                                <td>
                                    <img src="/images/uploads/<%= x.imageUrl[0] %>" class="card-img-top w-100" id="image<%= i %>"
                                        alt="Product Image">
                                    
                                </td>
                                <td id="description<%= i %>">
                                    <%= x.description %>
                                </td>
                                <td id="price<%= i %>">
                                    <%= x.price %>
                                </td>
            
                                <td id="color<%= i %>">
                                    <%= x.color %>
                                </td>
                                <td id="size<%= i %>">
                                    <%= x.size %>
                                </td>
                                <td id="category<%= i %>">
                                    <%= x.category.category %>
                                </td>
                                <td id="brand<%= i %>">
                                    <%= x.brand %>
                                </td>
                                <td style="width: 10px;">
                                    <input type="hidden" name="id" value="<%= x._id %> " id="cat_id<%= i %>">
                                    <button class="buttons my-2" id="editButton" onclick="editProduct('<%= i %>')">EDIT</button>
                                   
                                    <button class="buttons my-2"><a href="/admin/productDelete/<%= x._id %>">DELETE</a></button>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>



            </div>
        </div>
    </div>
    </div>

    




    <script>
        const button = document.getElementById('editButton');
        function editProduct(i) {

            // Get the current values from the table
            var id = document.querySelector(`#cat_id${i}`).value;
            var name = document.querySelector(`#name${i}`).innerText;
            const image = document.querySelector(`#image${i}`).getAttribute('src');
            var description = document.querySelector(`#description${i}`).innerText;
            var price = document.querySelector(`#price${i}`).innerText;
            var color = document.querySelector(`#color${i}`).innerText;
            // var size = document.querySelector(`#size${i}`).innerText;
            // var category = document.querySelector(`#category${i}`).innerText;
            // var brand = document.querySelector(`#brand${i}`).innerText;



            // Set the values in the popup
            document.querySelector("#cat_id").value = id;
            document.querySelector("#card_title").value = name;
            document.querySelector("#card_image").fileName = image;
            document.querySelector("#card_Description").value = description;
            document.querySelector("#card_Price").value = price;
            document.querySelector("#card_Color").value = color;
            // document.querySelector("#card_Size").value = size;
            // document.querySelector("#card_Category").value = category;
            // document.querySelector("#card_Brand").value = brand;



            // Open the popup
            document.querySelector("#editPopupLarge").style.display = "block";
        }

        // close the popup
        function onFormClose() {
            document.querySelector("#editPopupLarge").style.display = "none";
        }
    </script>
     <script>
        //searching the users

        // Get the search input and table rows
        const searchInput = document.querySelector('input[type="search"]');
        const tableRows = document.querySelectorAll('tbody tr');

        // Add an event listener to the search input
        searchInput.addEventListener('input', function () {
            const searchValue = this.value.toLowerCase();

            // Loop through the table rows and hide/show them based on the search input
            tableRows.forEach(function (row) {
                const productName = row.querySelector('td:nth-of-type(3)').textContent.toLowerCase();

                if (productName.includes(searchValue)) {
                    row.style.display = 'table-row';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>

