<body>
    <div class="container-fluid">
        <div class="row">
            <div class="left col-sm-2">

                <h2>Welcome</h2>


                <div class="col-md-5 mx-auto">
                    <div class="head">
                        <img
                            src="https://png.pngtree.com/png-vector/20191101/ourmid/pngtree-cartoon-color-simple-male-avatar-png-image_1934459.jpg">

                    </div>
                </div>
                <br>
                <button class="menubutton my-2"><a href="/admin/dashboard">Dashboard</a></button>
                <button class="menubutton my-2"><a href="/admin/userlist">Users</a></button>
                <button class="selectedbutton my-2"><a href="/admin/categorylist">Category</a></button>
                <button class="menubutton"><a href="/admin/catCreate">Create Category</a></button>
                <button class="menubutton my-2"><a href="/admin/productlist">Product</a></button>
                <button class="menubutton my-2"><a href="/admin/adminLogout">Logout</a></button>
            </div>
            <div class="col-sm-10 right">

                <br>

                <!-- popup element -->

                <div id="editPopup" style="display:none;">
                    <form action="/admin/updateCategory" method="post" enctype="multipart/form-data">
                        <label for="name">Category Name:</label>
                        <input class="w-75 mx-auto my-2 form-control" type="text" id="card_title" name="card_title"
                            oninput="validateCategoryName()"><span id="nameError" style="color: red;"></span><br>

                        <label for="name">Category Image:</label>
                        <input class="w-50 mx-auto my-3 form-control" type="file" id="card_image" name="image"><br>
                        <input type="hidden" name="id" id="cat_id">
                        <button class="w-75 mx-auto my-2 form-control " type="button"
                            onclick="onFormClose()">Close</button>
                        <button class="w-75 mx-auto my-2 form-control " type="submit">Submit</button>
                    </form>
                </div>
                <!---->

                <div class="card-container col-sm-3 col-md-6 col-lg-12">
                    <% data.forEach(function(x,i) { %>
                        <div class="card" style="width: 18rem;">
                            <h4 class="card-text mx-auto my-2"><span id="card_title<%= i %>">
                                <%= x.category %>
                            </span>
                            </h4>
                            <img id="image_container<%= i %>" class="card-img-top"
                                src="/images/uploads/<%= x.imageUrl %>" alt="Card image cap">
                            <div class="card-body">
                               
                                <input type="hidden" name="id" value="<%= x._id %> " id="cat_id<%= i %>">
                                <button class="buttons" id="editButton" onclick="editCategory('<%= i %>')">EDIT</button>

                                <button class="buttons"><a href="/admin/categoryDelete/<%= x._id %>">DELETE</a></button>
                            </div>
                        </div>
                        <% }); %>
                </div>




            </div>
        </div>

    </div>

    <script>
        const button = document.getElementById('editButton');
        function editCategory(card) {
            // Get the current values from the table
            var title = document.querySelector(`#card_title${card}`).innerText;
            const image = document.querySelector(`#image_container${card}`).getAttribute('src');
            var id = document.querySelector(`#cat_id${card}`).value;
            console.log('idVal123', id);
            // Set the values in the popup
            console.log('image')
            document.querySelector("#card_title").value = title;
            document.querySelector("#card_image").fileName = image;
            document.querySelector("#cat_id").value = id;
            // Open the popup
            document.querySelector("#editPopup").style.display = "block";
        }

        // close the popup
        function onFormClose() {
            document.querySelector("#editPopup").style.display = "none";
        }
    </script>

