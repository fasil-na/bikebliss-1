    <div class="container-fluid">
        <div class="row">

            <div class="col-sm-12 right">
                <br>
                <button class="createButton"><a href="/admin/catCreate">Create Category</a></button>
                <br>
                <!-- popup element -->

                <div id="editPopup" style="display:none;">

                    <form action="/admin/updateCategory" method="post" enctype="multipart/form-data">
                        <button class="close me-2" type="button" data-dismiss="modal" aria-label="Close"
                            onclick="onFormClose()">X</button>

                        <br>

                        <div class="row align-items-center">
                            <label for="name" class="col-sm-3 col-form-label">Category Name:</label>
                            <div class="col-sm-9">
                                <input class="w-75 my-3 form-control" type="text" id="card_title" name="card_title">
                            </div>
                        </div>

                        <div class="row align-items-center">
                            <label for="name" class="col-sm-3 col-form-label">Product Image:</label>
                            <div class="col-sm-9">
                                <img name="card_image" id="card_image" width="40%" height="40%" src="" alt=""><button
                                    class="btn bg-light mx-2" type="button" id="imgEdit" onclick="editImage()"><i
                                        class="fa-solid fa-pen"></i></button>
                                <input class="w-75 my-3 form-control" type="file" id="imageinput" name="imageinput"
                                    style="display: none;">
                            </div>
                        </div>

                        <input type="hidden" name="id" id="cat_id">

                        <button class="w-25 mx-auto my-3 form-control" type="submit">Submit</button>
                    </form>
                </div>
                <!---->
                <h2 class="text-danger text-center">
                    <%= text %>
                </h2>






                <div class="card-container row">
                    <% data.forEach(function(x,i) { %>
                        <div class="card col-sm-12 col-md-6 col-lg-4 mb-4">
                            <h4 class="card-text mx-auto my-2 ellipsis" data-bs-toggle="tooltip"
                                data-bs-placement="bottom" title="<%= x.category %>">
                                <span id="card_title<%= i %>">
                                    <%= x.category %>
                                </span>
                            </h4>
                            <img id="image_container<%= i %>" class="card-img-top"
                                src="/images/uploads/<%= x.imageUrl %>" alt="Card image cap">
                            <div class="card-body">

                                <input type="hidden" name="id" value="<%= x._id %> " id="cat_id<%= i %>">
                                <button class="buttons" id="editButton" onclick="editCategory('<%= i %>')">EDIT</button>

                                <button class="buttons"><a href="/admin/categoryDelete/<%= x._id %>">DELETE</a></button>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </div>
    </div>

    <script>
        const button = document.getElementById('editButton');

        function editCategory(i) {
            // Get the current values from the table
            let title = document.querySelector(`#card_title${i}`).innerText;
            const image = document.querySelector(`#image_container${i}`).getAttribute('src');
            let id = document.querySelector(`#cat_id${i}`).value;
            // Set the values in the popup
            document.querySelector("#card_title").value = title;
            document.querySelector("#card_image").setAttribute('src', image);
            document.querySelector("#cat_id").value = id;
            // Open the popup
            document.querySelector("#editPopup").style.display = "block";
        }

