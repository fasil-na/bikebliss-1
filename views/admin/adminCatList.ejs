<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/adminHomestyle.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="left col-sm-2">

                <h2>Welcome</h2>


                <div class="col-md-5 mx-auto">
                    <div class="head">
                        <img
                            src="https://png.pngtree.com/png-vector/20191101/ourmid/pngtree-cartoon-color-simple-male-avatar-png-image_1934459.jpg">

                    </div>
                </div>
                <br>
                <button class="menubutton my-2"><a href="/admin/dashboard">Dashboard</a></button>
                <button class="menubutton my-2"><a href="/admin/userlist">Users</a></button>
                <button class="menubutton my-2"><a href="/admin/categorylist">Category</a></button>
                <button class="menubutton my-2"><a href="/admin/productlist">Product</a></button>
                <button class="menubutton my-2"><a href="/adminLogout">Logout</a></button>
            </div>
            <div class="col-sm-10 right">
                <div class="fline">
                    <h2>Category List</h2>
                    <button class="buttons"><a href="/admin/catCreate">CREATE</a></button>
                </div>
                <br>

                 <!-- popup element -->
                 <div id="editPopup" style="display:none;">
                    <form method="POST" action="/update">
                        <label for="name">Name:</label>
                        <input class="w-75 mx-auto my-2 form-control" type="text" id="name" name="name"><br>
                        <label for="email">Email:</label>
                        <input class="w-75 mx-auto my-2 form-control" type="text" id="email" name="email"><br>
                        <label for="number">Number:</label>
                        <input class="w-75 mx-auto my-2 form-control" type="text" id="number" name="number"><br>
                        <div style="display: none;">
                            <label for="number">Number:</label>
                            <input class="w-75 mx-auto my-2 form-control" type="text" id="id" name="id"><br>
                        </div>
                        <button class="w-75 mx-auto my-2 form-control " type="submit">Submit</button>
                    </form>
                </div>
                <!---->

                <div class="card-container col-sm-3 col-md-6 col-lg-12">
                    <% data.forEach(function(x,i) { %>
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="/images/uploads/<%= x.imageUrl %>" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">
                                    <%= x.category %>
                                </p>
                                <button class="buttons" id="editButton-<%= i %>" onclick="editCategory('<%= i %>')">EDIT</button>


                                <button class="buttons"><a href="/admin/categoryDelete">DELETE</a></button>
                            </div>
                        </div>
                        <% }); %>
                </div>

               


            </div>
        </div>

    </div>

    <script>
        const button = document.getElementById('editButton');
        function editRow(card) {
            // Get the current values from the table
            var title = document.querySelector(`#column1_${card}`).innerText;
            var column2 = document.querySelector(`#column2_${card}`).innerText;
            var column3 = document.querySelector(`#column3_${card}`).innerText;
            var column4 = document.querySelector(`#column4_${card}`).innerText;

            // Set the values in the popup
            document.querySelector("#name").value = column1;
            document.querySelector("#email").value = column2;
            document.querySelector("#number").value = column3;
            document.querySelector("#id").value = column4;
            // Set the row index as a hidden input value

            // Open the popup
            document.querySelector("#editPopup").style.display = "block";
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>