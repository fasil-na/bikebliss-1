<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand text-primary" href="#">BIKEBLISS.COM</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText"
                aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarText">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/dashboard">DASHBOARD</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/userlist">USERS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/categorylist">CATEGORIES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/productlist">PRODUCTS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/bannerlist">BANNERS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/offerlist">OFFERS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/couponlist">COUPONS</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin/adminLogout">
                            <i class="fas fa-sign-out-alt"></i> LOGOUT
                        </a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">

            <div class="col-sm-12 right">
                <div class="fline">
                    <h2 class="w-50 mx-auto my-2">Create Coupon</h2>
                </div>

                <form action="/admin/couponCreate" method="post">
                    <input class="w-50 mx-auto my-3 form-control" type="text" placeholder="Coupon Code" name="name"
                        id="name" oninput="validateName()">
                    <div style="display: flex; justify-content: center;">
                        <span id="nameError" style="color: red;"></span>
                    </div>
                    <input class="w-50 mx-auto my-3 form-control" type="number" placeholder="Offer Percentage"
                        id="percentage" name="percentage" oninput="validatePercentage()">
                    <div style="display: flex; justify-content: center;">
                        <span id="percentageError" style="color: red;"></span>
                    </div>

                    <input class="w-50 mx-auto my-3 form-control" type="date" placeholder="Expiry Date" name="date"
                        id="date" onchange="validateExpiryDate()" >
                    <div style="display: flex; justify-content: center;">
                        <span id="expiryDateError" style="color: red;"></span>
                    </div>


                    <button class="w-50 login mx-auto my-3 form-control" id="submitButton" type="submit"
                        disabled>ADD</button>

                </form>


            </div>
        </div>

    </div>

    <script src="/javascripts/couponValidation.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
