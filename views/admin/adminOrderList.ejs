    <div class="container-fluid">
        <div class="row">

            <div class="col-sm-12 right">
                <br>

                <div class=" d-flex justify-content-end">
                    <input class="col-6 form-control me-2  w-25" id="search" type="search" placeholder="Search Orders"
                        aria-label="Search">
                </div>
                <br>
                <table id='myTable'>
                    <thead>
                        <tr>
                            <th>ORDER ID</th>
                            <th>PRODUCT NAME</th>
                            <th>QUANTITY</th>
                            <th>PRICE</th>
                            <th>PAYMENT TYPE</th>
                            <th>TOTAL PRICE</th>
                            <th>ORDER STATUS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orderData.forEach(function(i,x) { %>
                            <tr>

                                <td>
                                    <%= i._id %>
                                </td>
                                <td>
                                    <% i.productDetails.forEach((j)=> { %>
                                        <div class="tableHeight">
                                            <%= j.productName %>
                                        </div>
                                        <% }); %>
                                </td>
                                <td>
                                    <% i.item.forEach((j)=> { %>
                                        <div class="tableHeight">
                                            <%= j.price %>
                                        </div>
                                        <% }); %>
                                </td>
                                <td>
                                    <% i.item.forEach((j)=> { %>
                                        <div class="tableHeight">
                                            <%= j.quantity %>
                                        </div>
                                        <% }); %>
                                </td>
                                <td>
                                    <%= i.paymentType %>
                                </td>
                                <td>
                                    <%= i.totalPrice %>
                                </td>
                                <td>
                                    <select id="statusDropdown" onchange="changestatus(event, '<%= i._id %>')">
                                        <option value="Placed" <%=i.status==="Placed" ? "selected" : "" %>>Placed
                                        </option>
                                        <option value="Shipping" <%=i.status==="Shipping" ? "selected" : "" %>>Shipping
                                        </option>
                                        <option value="Dispatched" <%=i.status==="Dispatched" ? "selected" : "" %>
                                            >Dispatched</option>
                                        <option value="Delivered" <%=i.status==="Delivered" ? "selected" : "" %>
                                            >Delivered</option>
                                        <option value="Cancelled" <%=i.status==="Cancelled" ? "selected" : "" %>
                                            >Cancelled</option>
                                    </select>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
                <style>
                    .pagination-container {
                        display: flex;
                        justify-content: center;
                        margin-top: 20px;
                    }

                    .pagination-link {
                        margin: 0 5px;
                        padding: 5px 10px;
                        border: 1px solid #ccc;
                        text-decoration: none;
                        color: #333;
                        background-color: #f7f7f7;
                        cursor: pointer;
                    }

                    .pagination-link.active {
                        background-color: #555;
                        color: #fff;
                    }
                </style>

                <div class="pagination-container">
                    <% for (let i=1; i <=totalPages; i++) { %>
                        <a href="/admin/orderlist?page=<%= i %>"
                            class="pagination-link<%= i === currentPage ? ' active' : '' %>">
                            <%= i %>
                        </a>
                        <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <script>
        function changestatus(event, id) {
            fetch('/admin/updateStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ statusvalue: event.target.value, id: id })
            })
                .then(function (response) {
                    if (response.ok) {
                        console.log('Status updated successfully');
                    } else {
                        console.error('Failed to update status');
                    }
                })
                .catch(function (error) {
                    console.error('Error:', error);
                });
        }

    </script>
    <script>
        //searching the users

        // Get the search input and table rows
        const searchInput = document.querySelector('input[type="search"]');
        const tableRows = document.querySelectorAll('tbody tr');

        // Add an event listener to the search input
        searchInput.addEventListener('input', function () {
            const searchValue = this.value.toLowerCase();

            // Loop through the table rows and hide/show them based on the search input
            tableRows.forEach(function (row) {
                const name = row.querySelector('td:nth-of-type(2)').textContent.toLowerCase();

                if (name.includes(searchValue)) {
                    row.style.display = 'table-row';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
</body>

</html>